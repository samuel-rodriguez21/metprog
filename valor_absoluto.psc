Proceso valor_absoluto 
	
	//Paso 1 Solicitar el número 
	Definir num, valabs como real;
	Escribir "Ingresa un número";
	Leer num;
	
	//Paso 2 Calcular el valor absoluto 
	valabs <- abs(num);
	
	//Paso 3 Dar a conocer 
	Escribir "El valor absoluto de ", num, " es ", valabs;
FinProceso
